<?xml version='1.0' encoding='utf-8'?>
<widget id="com.openhome.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Open Home</name>
    <description>An app to collect data from your open home guests.</description>
    <author email="taylordonhamling@gmail.com" href="https://www.taylorhamling.com">Taylor Hamling</author>
	
	
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	
	
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
	
	
	
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="resources/android/icon/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="resources/android/icon/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="resources/android/icon/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="resources/android/icon/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="resources/android/icon/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="resources/android/icon/drawable-xxxhdpi-icon.png" />

		
		<splash density="port-ldpi" src="resources/android/splash/splash-port-ldpi.png"/>
		<splash density="port-mdpi" src="resources/android/splash/splash-port-mdpi.png"/>
		<splash density="port-hdpi" src="resources/android/splash/splash-port-hdpi.png"/>
		<splash density="port-xhdpi" src="resources/android/splash/splash-port-xhdpi.png"/>
		<splash density="port-xxhdpi" src="resources/android/splash/splash-port-xxhdpi.png"/>
		<splash density="port-xxxhdpi" src="resources/android/splash/splash-port-xxxhdpi.png"/>		
        <splash density="land-ldpi" src="resources/android/splash/splash-land-ldpi.png" />
        <splash density="land-mdpi" src="resources/android/splash/splash-land-mdpi.png" />
        <splash density="land-hdpi" src="resources/android/splash/splash-land-hdpi.png" />
        <splash density="land-xhdpi" src="resources/android/splash/splash-land-xhdpi.png" />
        <splash density="land-xxhdpi" src="resources/android/splash/splash-land-xxhdpi.png" />
        <splash density="land-xxxhdpi" src="resources/android/splash/splash-land-xxxhdpi.png" />		
		
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
		
		
		<icon src="resources/icons/ios/icon-1024.png" width="1024" height="1024"/>
		<icon src="resources/icons/ios/icon-small.png" width="29" height="29"/>
		<icon src="resources/icons/ios/icon-small@2x.png" width="58" height="58"/>
		<icon src="resources/icons/ios/icon-small@3x.png" width="87" height="87"/>
		<icon src="resources/icons/ios/icon-small-40.png" width="40" height="40"/>
		<icon src="resources/icons/ios/icon-small-40@2x.png" width="80" height="80"/>
		<icon src="resources/icons/ios/icon-small-40@3x.png" width="120" height="120"/>
		<icon src="resources/icons/ios/icon-small-50.png" width="50" height="50"/>
		<icon src="resources/icons/ios/icon-small-50@2x.png" width="100" height="100"/>
		<icon src="resources/icons/ios/icon.png" width="57" height="57"/>
		<icon src="resources/icons/ios/icon@2x.png" width="114" height="114"/>
